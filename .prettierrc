{
  "semi": false,
  "tabWidth": 2,
  "singleQuote": true,
  "trailingComma": "none",
  "printWidth": 100,
  "overrides": [
    {
      "files": [
        "*.json",
        "*.html",
        "*.css",
        "*.less",
        "*.scss",
        "*.config.*",
        "*.eslintrc.*",
        "webpack/**/*"
      ],
      "options": {
        "tabWidth": 2,
        "singleQuote": true,
        "semi": true
      }
    },
    {
      "files": [
        "*.vue"
      ],
      "options": {
        "tabWidth": 2,
        "singleQuote": true
      }
    },
    {
      "files": [
        "*.jsx",
        "*.tsx",
        "*.style.*"
      ],
      "options": {
        "tabWidth": 2
      }
    }
  ]
}
